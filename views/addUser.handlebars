<!DOCTYPE html>

<h3>{{viewTitle}}</h3>

<form action="/user" method="POST" autocomplete="off">
	<input type="hidden" name="_id" value="{{user._id}}">
	<div class="form-group">
		<label>Full Name</label>
		<input type="text" class = "form-control" name = "name" placeholder = "Full Name" value="{{user.name}}">
	</div>
	<div class="form-group">
		<label>Type</label>
		<input type="text" class = "form-control" name = "type" placeholder = "Type" value="{{user.type}}">
	</div>
	<div class="form-group">
		<label>Institution</label>
		<input type="text" class = "form-control" name = "institution" placeholder = "Institution" value="{{user.institution}}">
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-info">Submit</button>
		<a class="btn btn-secondary" href="/user/list"><i class="fa fa-list-alt"></i> User List</a>
	</div>

</form>

