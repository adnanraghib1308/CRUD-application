<!DOCTYPE html>

<h3><a class="btn btn-secondary" href="/user"><i class="fa fa-plus" aria-hidden = 'true'></i> Create New </a> User List </h3>

<table class = 'table table-stripped'>
	<thread>
		<tr>
			<th>Name</th>
			<th>Type</th>
			<th>Institution</th>
			<th></th>
		</tr>
	</thread>
	<tbody>
		{{#each list}}
		<tr>
			<td>{{this.name}}</td>
			<td>{{this.type}}</td>
			<td>{{this.institution}}</td>
			<td>
				<a href="/user/find/{{this._id}}"><i class="fa fa-pencil" aria-hidden = "true"></i></a>
				<a href="/user/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash fa-lg" aria-hidden = 'true'></i></a>
			</td>
		</tr>
		{{/each}}
	</tbody>	
</table>